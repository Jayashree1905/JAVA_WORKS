import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
      
        Scanner s= new Scanner(System.in);
        int n=s.nextInt();
        int sum=0;
        int fact=1;
        if(n==0){
            sum=0;
            fact=0;
        }
        for(int i=1;i<=n;i++){
            sum=sum+i;
            fact=fact*i;
        }
        System.out.println(sum);
        System.out.println(fact);
    }
}
